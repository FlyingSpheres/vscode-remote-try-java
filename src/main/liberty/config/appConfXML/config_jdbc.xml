<server>
    <library id="MySQLLib"
             name="MySQL Driver"
             description="JDBC Driver for MySql">
        <file name="${shared.resource.dir}/mysql-connector-java/mysql-connector-java-8.0.27.jar"/>
    </library>
    <dataSource id="DefaultDataSource" jndiName="jdbc/BookDB">
        <jdbcDriver libraryRef="MySQLLib" />
        <!-- config for Docker -->
        <properties databaseName="app_db"
                    serverName="127.0.0.1"
                    portNumber="3306"
                    user="db_user"
                    password="db_user_pass"
                    URL="jdbc:mysql://127.0.0.1:3306/app_db" />
    </dataSource>
</server>